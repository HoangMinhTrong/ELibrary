                                <span class="fa fa-star"></span>
                                <span class="fa fa-star"></span>
                            </div>
                            <span class="review-no">@Model.UserVotes.Where(x => x.Id == Model.Id).Count()</span>
                        </div>*@
                    <h6>
                        @foreach (var category in Model.DocumentCategories)
                        {
                            <span style="background-color:#868c96;">@category.Category.Title</span> <span>&ensp;</span>
                        }
                    </h6>
                    <h6>Description: <span class="product-description">@Model.Description</span></h6>
                    <h6>View: <span> @Model.AccessRequests.Where(x => x.IsAccept == true).Count()</span></h6>
                    <h6>Rate: @Model.AverageRate<span>(@Model.UserVotes.Count() vote)</span></h6>



                </div>
            </div>
        </div>
    </div>

    <div class="col-xs-12">
        <h3>Chapters List</h3>
        <div id="chapterList">
            @foreach (var item in ViewBag.Chapters)
            {
                <div>
                    <a style="line-height: 1.2" class="nav-link active" href="#"><p font-size:18px>@item.Number<span>: </span>@item.Title</p></a>
                </div>
            }
        </div>
        
    </div>

