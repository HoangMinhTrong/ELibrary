@model ELibrary_Team_1.Models.Chapter

@{
    ViewData["Title"] = "Chapter";
    Layout = null;
}

<div class="row">
    <div class="col-xl">


        @if (ViewBag.AccessStatus == false)
        {
            <h6>@ViewBag.ChapterTitle</h6>
            <h5>You do not have permission to access this chapter.</h5>
            <h5>Submit a request for access</h5>
        }
        else
        {
            <h6 class="card-subtitle mb-2 text-muted">@Model.Number: @Model.Title</h6>
            <p class="card-text">@Model.Content</p>

        }
        <hr />
        <div>
            <button type="button" class="btn btn-default btn-prev">Prev</button>
            <button type="button" class="btn btn-default btn-next">Next</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
        <div>

        </div>





    </div>
</div>


